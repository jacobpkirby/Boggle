<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jacob.boggle.MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/backgorund">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/TopLinearLayout"
        android:layout_weight=".75"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score: "
            android:id="@+id/yourScoreTextView"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textColor="#100c00"
            android:typeface="sans"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/textView"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:layout_weight="4"
            android:textAlignment="textStart"
            android:textColor="#100c00"
            android:textStyle="bold"
            android:typeface="sans" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:textSize="40sp"
            android:layout_weight="25"
            android:textAlignment="center"
            android:textColor="#100c00"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent Score:"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#100c00"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="#100c00"
            android:textStyle="bold"
            android:typeface="sans"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:id="@+id/TitleLayout">

        <TextView android:textColor="#2d0606"
            android:layout_width="0dp"
            android:text="Boggle"
            android:layout_height="91dp"
            android:shadowColor="#fbc3c3"
            android:shadowDx="15"
            android:shadowDy="-10"
            android:shadowRadius="3"
            android:textSize="65sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            android:textAlignment="gravity"
            android:layout_weight="2"
            android:gravity="top|center_horizontal"
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/MainLayout"
        android:layout_weight="4">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="G"
                android:id="@+id/button4"
                android:background="@mipmap/wood1"
                android:textSize="55sp"
                android:textAlignment="center"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/button5"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:text="F"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="P"
                android:id="@+id/button6"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="E"
                android:id="@+id/button7"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="O"
                android:id="@+id/button"
                android:adjustViewBounds="false"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="K"
                android:id="@+id/button2"
                android:layout_gravity="left"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="U"
                android:id="@+id/button3"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="G"
                android:id="@+id/button8"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="R"
                android:id="@+id/button9"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="A"
                android:id="@+id/button10"
                android:layout_gravity="left|bottom"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="T"
                android:id="@+id/button11"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="Qu"
                android:id="@+id/button12"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="L"
                android:id="@+id/button14"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/button15"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:text="Y"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="N"
                android:id="@+id/button16"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />

            <Button
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="B"
                android:id="@+id/button17"
                android:background="@mipmap/wood1"
                android:layout_margin="1dp"
                android:textSize="55sp"
                android:textAlignment="center" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/BottemLayout"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="20dp">

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="Sumbit Score"
            android:id="@+id/button18"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight=".75" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:fillViewport="false"
            android:foreground="#f3cbcb"
            android:layout_weight="3"
            android:background="#526f9a">

        </ScrollView>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight=".75" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton2"
            android:layout_weight=".5" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:layout_weight=".5"/>


    </LinearLayout>

</LinearLayout>
